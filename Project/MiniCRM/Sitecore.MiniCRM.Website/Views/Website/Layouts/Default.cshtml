@using Sitecore.ExperienceForms.Mvc.Html

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@Html.Sitecore().Field("Browser Title", Html.Sitecore().CurrentRendering.Item) - @Html.Sitecore().Field("Page Title", Html.Sitecore().CurrentRendering.Item)</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
    <script src="/Scripts/jquery-3.0.0.min.js"></script>

    <script language="javascript">
        var $j = jQuery.noConflict();
    </script>

    <style type="text/css">

        .container-fluid {
            margin-right: auto;
            margin-left: auto;
            max-width: 1200px;
        }

        .field-validation-error {
            color: red;
            display: block;
        }

        .table-wrapper {
            padding: 1.5rem;
            margin-right: 0;
            margin-left: 0;
            border-width: .2rem;
            margin-left: -15px;
            margin-right: 15px;
            border: solid #f7f7f9;
        }

        .form-group {
            padding-right: 8px;
        }

        .control-label {
            padding-right: 8px;
        }

        .footer {
            padding-top: 1.5rem;
            color: #777;
            border-top: .05rem solid #e5e5e5;
        }

        .btn-padding {
            margin-top: 10px;
        }
    </style>



    @Html.RenderFormStyles()


</head>
<body>

    <div class="container-fluid" style="margin-top: 8px;">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <!-- Brand -->
            <a class="navbar-brand" href="#">MR</a>

            <!-- Links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
            </ul>
        </nav>

    </div>

    <div class="container-fluid" style="margin-top: 8px;">
        <div class="jumbotron">
            <h1>Mini CRM</h1>
            <p>A very simple tool for keeping track of contacts</p>

        </div>
    </div>

    <div class="container-fluid">
        @Html.Sitecore().Placeholder("main-content")
    </div>

    <div class="container-fluid">
        <footer class="footer">
            <p>© ACME 2018</p>
        </footer>
    </div>

    <script src="/Scripts/jquery-3.0.0.slim.min.js"></script>
    <script src="/Scripts/umd/popper.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>

    @Html.RenderFormScripts()



</body>
</html>
